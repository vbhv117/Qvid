<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/booking_history_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorControlActivated"
        android:padding="8dp">
        <TextView
            android:id="@+id/salon_name_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:fontFamily="@font/acme"
            android:text="Salon"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />
        <TextView
            android:id="@+id/booking_id_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/salon_name_user"
            android:fontFamily="@font/acme"
            android:text="Booking ID" />
        <TextView
            android:id="@+id/service_name_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/booking_id_user"
            android:fontFamily="@font/acme"
            android:text="Service Name" />
        <TextView
            android:id="@+id/service_rate_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/service_name_user"
            android:fontFamily="@font/acme"
            android:text="Service Rate" />

        <TextView
            android:id="@+id/day_name_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/service_rate_user"
            android:fontFamily="@font/acme"
            android:text="Day name" />
        <TextView
            android:id="@+id/slot_name_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/service_rate_user"
            android:layout_toRightOf="@id/day_name_user"
            android:fontFamily="@font/acme"
            android:layout_marginLeft="5dp"
            android:text="Slot name" />

        <TextView
            android:id="@+id/status_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/slot_name_user"
            android:fontFamily="@font/acme"
            android:text="Status"
            android:textStyle="bold" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>