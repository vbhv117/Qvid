<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".AdminActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_marginTop="90dp"
        app:srcCompat="@drawable/logo"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/hi_admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Hello"
        android:fontFamily="@font/acme"
        android:textColor="@color/colorAccent"
        android:textSize="24sp" />

    <Button
        android:id="@+id/bookings_admin"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/map_activity"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="400dp"
        android:padding="10dp"
        android:background="?attr/colorControlActivated"
        android:fontFamily="@font/acme"
        android:text="Display Appointments" />

    <Button
        android:id="@+id/manage_bookings"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bookings_admin"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:background="?attr/colorControlActivated"
        android:fontFamily="@font/acme"
        android:layout_marginTop="5dp"
        android:text="Manage Appointments" />


</RelativeLayout>