<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".AccountActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_marginTop="90dp"
        app:srcCompat="@drawable/logo"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/hi_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Hello"
        android:textColor="@color/colorAccent"
        android:fontFamily="@font/acme"
        android:textSize="24sp" />
    <Button
        android:id="@+id/map_activity"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="400dp"
        android:padding="10dp"
        android:background="?attr/colorControlActivated"
        android:fontFamily="@font/acme"
        android:text="View Shops near me"
        android:layout_centerHorizontal="true"/>
    <Button
        android:id="@+id/booking_history"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:text="View Booking History"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:background="?attr/colorControlActivated"
        android:fontFamily="@font/acme"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/map_activity"/>
    <Button
        android:id="@+id/book_appointment"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/booking_history"
        android:layout_centerHorizontal="true"
        android:background="?attr/colorControlActivated"
        android:fontFamily="@font/acme"
        android:text="Book Appointment"
        android:padding="10dp"/>


</RelativeLayout>